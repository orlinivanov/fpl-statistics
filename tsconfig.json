{
  "compilerOptions": {
    "noEmit": true,
    "target": "ES2022",
    "moduleResolution": "Node",
    "module": "nodenext",
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,
    "rootDir": "./src"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
